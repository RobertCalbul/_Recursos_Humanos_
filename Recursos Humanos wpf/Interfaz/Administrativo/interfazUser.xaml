<UserControl x:Class="Recursos_Humanos_wpf.Interfaz.Administrativo.interfazUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="784" d:DesignWidth="702">

    <Grid Name="WorkSpace" Margin="0" Grid.RowSpan="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="357*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="72*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="212*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="212*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="5" Grid.Row="1" Grid.RowSpan="12" BorderBrush="#FF2D2D2D" BorderThickness="1" CornerRadius="5" Grid.ColumnSpan="5">

        </Border>
        <Separator Grid.Row="8" Grid.Column="6" VerticalAlignment="Top" Grid.ColumnSpan="3" Background="#FF2D2D2D" Height="1" Margin="0,2,0,0" />
        <Label Content="&gt;&gt;" Grid.Column="7" Grid.Row="9" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="User Name" Grid.Column="6" Grid.Row="2"/>
        <ListBox Grid.ColumnSpan="3" Margin="0" Grid.Row="2" Grid.Column="1" Grid.RowSpan="8"/>
        <Label Content="Usuario" Grid.Column="1" Margin="0" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Label Content="Password" Grid.Column="6" Margin="0" Grid.Row="4"/>
        <TextBox Name="tUserName" Grid.Column="8" Margin="0" TextWrapping="Wrap" Grid.Row="2"/>
        <TextBox Name="tPassword" Grid.Column="8" Margin="0" TextWrapping="Wrap" Grid.Row="4"/>
        <Label Name="btnNewUser" Content="Add" Grid.Column="1" Margin="1" Grid.Row="11" Background="#FF129D5A" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" MouseEnter="btnNewUser_MouseEnter" MouseLeave="btnNewUser_MouseLeave"/>
        <Label Name="btnDeleteUser" Content="Delete" Grid.Column="2" Margin="1" Grid.Row="11" Background="#FFE87467" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" MouseEnter="btnDeleteUser_MouseEnter" MouseLeave="btnDeleteUser_MouseLeave"/>
        <Label Name="btnFilter" Content="Filtrar" Grid.Column="3" Margin="1" Grid.Row="11" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#FF4185F4" Foreground="White" MouseEnter="btnFilter_MouseEnter" MouseLeave="btnFilter_MouseLeave"/>
        <ListBox Name="list1" Grid.Column="6" Margin="0" Grid.Row="9"/>
        <ListBox Name="list2" Grid.Column="8" Margin="0" Grid.Row="9"/>
        <Label Content="Asignar un Grupo de Usuario" Grid.Column="6" Margin="0" Grid.Row="8" Grid.ColumnSpan="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Name="btnAdduser" Content="Agregar Usuario" Grid.Column="8" Margin="0" Grid.Row="6" Background="#FF129D5A" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MouseEnter="btnAdduser_MouseEnter" MouseLeave="btnAdduser_MouseLeave"/>
        <Label Name="btnAddUserGroup" Content="Agregar User Group" Grid.Column="6" Margin="0" Grid.Row="11" Foreground="White" Background="#FF129D5A" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseEnter="btnAddUserGroup_MouseEnter" MouseLeave="btnAddUserGroup_MouseLeave"/>
        <Label Name="btnDeleteUserGroup" Content="Eliminar User Group" Grid.Column="8" Margin="0" Grid.Row="11" Background="#FFE87467" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MouseEnter="btnDeleteUserGroup_MouseEnter" MouseLeave="btnDeleteUserGroup_MouseLeave"/>

    </Grid>

</UserControl>
