<UserControl x:Class="Recursos_Humanos_wpf.Interfaz.Administrativo.interfazUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="757" d:DesignWidth="702">

    <Grid Name="WorkSpace" Margin="0" Grid.RowSpan="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="210*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="268*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>


        <TextBox Margin="0,4,0,0" TextWrapping="Wrap" Text="0" Grid.Row="1" Grid.Column="3"/>
        <Label Content="Buscar Usuario" Margin="0" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1"/>

        <Label Content="Nombre Usuario" Grid.Column="1" Margin="0" Grid.Row="3" VerticalContentAlignment="Center"/>
        <Label Content="Password" Grid.Column="1" Margin="0" Grid.Row="5" VerticalContentAlignment="Center"/>
        <TextBox Name="tUserName" Grid.Column="3" Margin="0" Grid.Row="3" TextWrapping="Wrap" VerticalContentAlignment="Center"/>
        <TextBox Name="tPassword" Grid.Column="3" Margin="0" Grid.Row="5" TextWrapping="Wrap" VerticalContentAlignment="Center"/>
        <ListBox Grid.Column="1" Margin="0" Grid.Row="9"/>
        <ListBox Grid.Column="3" Margin="0" Grid.Row="9"/>
        <Label Content="Seleccione" Grid.Column="1" Margin="0" Grid.Row="7"/>
        <Label Content="Arrastrar aqui" Grid.Column="3" Margin="0" Grid.Row="7"/>
    </Grid>

</UserControl>
